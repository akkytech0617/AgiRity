{
  "name": "agirity",
  "version": "0.1.0",
  "description": "Workspace management tool that automatically launches multiple applications for project work",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "author": "AgiRity Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest run --no-color",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prebuild:e2e": "VITE_USE_MOCK_DATA=false tsc && vite build",
    "test:e2e": "npm run prebuild:e2e && playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:dev": "npm run prebuild:e2e && playwright test --config=tests/e2e/playwright.config.ts tests/e2e/dev-mode-test.spec.ts",
    "test:e2e:ui": "npm run prebuild:e2e && playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:debug": "npm run prebuild:e2e && playwright test --config=tests/e2e/playwright.config.ts --debug",
    "test:smoke": "npm run prebuild:e2e && playwright test --config=tests/e2e/playwright.config.ts tests/e2e/smoke",
    "lint": "eslint --no-color .",
    "lint:fix": "eslint . --fix --no-color",
    "format": "prettier --write .",
    "format:check": "prettier --check --no-color .",
    "type-check": "tsc --pretty false -p tsconfig.json --noEmit && tsc --pretty false -p tsconfig.node.json --noEmit",
    "package": "electron-builder",
    "release": "npm run build && git tag -a v$npm_package_version -m \"v$npm_package_version\" && git push origin v$npm_package_version",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@sentry/electron": "^7.5.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@microsoft/eslint-plugin-sdl": "^1.1.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.30",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "electron-playwright-helpers": "^2.0.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "lefthook": "^2.0.13",
    "postcss": "^8.4.35",
    "prettier": "^3.7.4",
    "snyk": "^1.1301.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.16"
  }
}
